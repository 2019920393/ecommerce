@startuml 云原生电商平台系统用例图
' 设置中文字体支持
skinparam defaultFontName "Microsoft YaHei, SimHei, Arial Unicode MS"
skinparam defaultFontSize 12

' 设置样式
skinparam packageStyle rectangle
skinparam actorStyle awesome
skinparam backgroundColor #FEFEFE
skinparam shadowing false

' 设置用例样式
skinparam usecase {
  BackgroundColor #E1F5FE
  BorderColor #01579B
  BorderThickness 2
  FontSize 11
}

' 设置角色样式
skinparam actor {
  BackgroundColor #FFECB3
  BorderColor #FF6F00
  BorderThickness 2
  FontSize 12
}

' 标题
title 云原生微服务电商平台 - 系统用例图 (UML 2.5)
center footer UML版本: UML 2.5 | 建模工具: PlantUML | 23个用例 | 3个角色

' 定义角色
actor "普通用户\n(Customer)" as Customer #LightBlue
actor "管理员\n(Admin)" as Admin #LightCoral
actor "DevOps工程师\n(DevOps)" as DevOps #LightGreen

' 系统边界
rectangle "云原生电商平台系统" {
  
  ' ===== 普通用户用例 (UC1-UC12) =====
  package "用户服务" {
    usecase (UC1: 用户注册) as UC1
    usecase (UC2: 用户登录) as UC2
    usecase (UC3: 管理个人信息) as UC3
    usecase (UC4: 管理收货地址) as UC4
  }
  
  package "商品服务" {
    usecase (UC5: 浏览/搜索商品) as UC5
    usecase (UC6: 查看商品详情) as UC6
  }
  
  package "购物车服务" {
    usecase (UC7: 添加商品到购物车) as UC7
    usecase (UC8: 管理购物车) as UC8
  }
  
  package "订单服务" {
    usecase (UC9: 创建订单) as UC9 #FFEB3B
    usecase (UC11: 查询订单) as UC11
    usecase (UC12: 取消订单) as UC12
  }
  
  package "支付服务" {
    usecase (UC10: 订单支付) as UC10 #FFEB3B
  }
  
  ' ===== 管理员用例 (UC13-UC18) =====
  package "管理功能" {
    usecase (UC13: 管理员登录) as UC13
    usecase (UC14: 管理商品分类) as UC14
    usecase (UC15: 管理商品信息) as UC15
    usecase (UC16: 管理商品库存) as UC16
    usecase (UC17: 管理订单) as UC17
    usecase (UC18: 查看支付记录) as UC18
  }
  
  ' ===== DevOps用例 (UC19-UC23) =====
  package "DevOps与运维" {
    usecase (UC19: 容器化与部署) as UC19
    usecase (UC20: 配置API网关) as UC20
    usecase (UC21: 配置服务注册与发现) as UC21
    usecase (UC22: 配置管理) as UC22
    usecase (UC23: 系统监控与日志) as UC23
  }
  
  ' 注释说明
  note right of UC9
    **高价值用例**
    风险高、业务核心
    详细分析见需求说明文档
  end note
  
  note right of UC10
    **高价值用例**
    涉及分布式事务
    详细分析见需求说明文档
  end note
}

